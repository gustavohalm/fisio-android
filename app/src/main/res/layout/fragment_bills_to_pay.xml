<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BillsToPayFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Adicione uma Conta a Pagar"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorEdit"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinBillsToPayDay"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spinCashierMonth"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editCashierYear"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:drawableTop="@color/colorPrimaryDark"
                android:drawableBottom="@color/colorPrimaryDark"
                android:ems="10"
                android:gravity="center_vertical|center"
                android:inputType="textPersonName"
                android:text="2019" />
        </LinearLayout>

        <EditText
            android:id="@+id/editPayValue"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@color/colorEdit"
            android:ems="10"
            android:hint="Valor: R$ 55,3"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editPayDescription"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_margin="16dp"
            android:background="@color/colorEdit"
            android:ems="10"
            android:gravity="top"
            android:hint="Ex: Rereferent a Produtos"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnPayAdd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:text="adicionar"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>