<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PatientFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="Adicione um Novo Paciente"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editPatientName"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@color/colorEdit"
                android:ems="10"
                android:hint="Nome"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/editPatientHeight"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@color/colorEdit"
                android:ems="10"
                android:hint="Altura"
                android:inputType="numberDecimal"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/editPatientWeight"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@color/colorEdit"
                android:ems="10"
                android:hint="Peso"
                android:inputType="numberDecimal"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinPatientDay"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorEdit" />

                <Spinner
                    android:id="@+id/spinPatientMonth"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorEdit" />

                <EditText
                    android:id="@+id/editPatientYear"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorEdit"
                    android:drawableTop="@color/colorPrimaryDark"
                    android:drawableBottom="@color/colorPrimaryDark"
                    android:ems="10"
                    android:gravity="center_vertical|center"
                    android:inputType="textPersonName"
                    android:text="2019" />
            </LinearLayout>

            <EditText
                android:id="@+id/editPatientCpf"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@color/colorEdit"
                android:ems="10"
                android:hint="CPF"
                android:inputType="number"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/editPatientRg"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@color/colorEdit"
                android:ems="10"
                android:hint="RG"
                android:inputType="number"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/editPatientCelphone"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@color/colorEdit"
                android:ems="10"
                android:hint="Celular"
                android:inputType="number"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/editPatientEmail"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@color/colorEdit"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/editPatientAddres1"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@color/colorEdit"
                android:ems="10"
                android:hint="Rua"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/editPatientAddres2"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@color/colorEdit"
                android:ems="10"
                android:hint="Numero"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/editPatientAddres3"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@color/colorEdit"
                android:ems="10"
                android:hint="Bairro"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/editPatientCity"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@color/colorEdit"
                android:ems="10"
                android:hint="Cidade"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/editPatientDescription"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_margin="16dp"
                android:background="@color/colorEdit"
                android:ems="10"
                android:gravity="top"
                android:hint="Adicione alguma descição ao Paciente"
                android:inputType="textMultiLine"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp" />

            <Button
                android:id="@+id/btnPatientAdd"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@color/colorPrimary"
                android:text="ADICIONAR"
                android:textColor="@color/colorEdit"
                android:textSize="32sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>